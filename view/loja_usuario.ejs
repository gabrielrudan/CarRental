                    <label>Cor: <%= carros[i].cor %></label>
                    <h2>R$ <%= carros[i].diaria %><span>/dia</span></h2>
                    <a href="/loja-alugar?cod=<%= carros[i]._id %>" class="btn">Alugar</a>
                </div>
            <% } %>
        </div>
    </section>
    <%- include('foolder.ejs') %>

