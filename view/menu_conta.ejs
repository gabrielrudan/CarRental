<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('head_conta.ejs') %>
</head>
<body>
    <!-- Header -->
    <header>
        <a href="#" class="logo"><img src="img/man.png" alt=""></a>

        <div class="bx bx-menu" id="menu-icon"></div>

        <ul class="navbar">
            <li><a href="/loja">Loja</a></li>
            <li><a href="/loja-aluguel">Meus Aluguéis</a></li>
            <li><a href="/loja-conta">Minha Conta</a></li>
        </ul>

        <div class="header-btn">
            <a href="/" class="sign-in">Sair</a>
        </div>
    </header>

    <div class="container">
        <div class="leftbox">
            <nav>
                <a onclick="myFunction(0)" class="tab active">
                    <i class='bx bxs-user-rectangle'></i>
                </a>
                <a onclick="myFunction(1)" class="tab">
                    <i class='bx bx-edit-alt'></i>
                </a>
                <a onclick="myFunction(2)" class="tab">
                    <i class='bx bx-key' ></i>
                </a>
            </nav>
        </div>
        <div class="rightbox">
            <div class="profile tabShow" id="profile" style="display: block;">
                <div class="title-form">
                    <h1>Minha Conta</h1>
                </div>
                <div class="text">
                    <span>Nome completo:  <%= usuario.nome_user %> </span>
                    <span>Data de Nascimento:  <%= usuario.data_nascimento_user%></span>
                    <span>Gênero:  <%= usuario.genero_user %></span>
                    <span>Telefone:  <%= usuario.telefone_user %></span>
                    <span>Email:  <%= usuario.email_user %></span>
                </div>
            </div>
            <div class="edit tabShow" id="edit">
                <h1><div class="title-form">
                    <h1>Editar Conta</h1>
                </div></h1>
                <form method="post" action="/loja-conta-update">
                    <div class="text">
                        <input type="text" name="novo_nome" id="" value="<%= usuario.nome_user %>">
                        <input type="date" name="nova_data" id="" value="<%= usuario.data_nascimento %>">
                        <input type="text" name="novo_genero" id="" value="<%= usuario.genero_user %>">
                        <input type="tel" name="novo_telefone" id="" value="<%= usuario.telefone_user %>">
                        <input type="email" name="novo_email" id="" value="<%= usuario.email_user %>">
                    </div>
                    <button type="submit"><input type="button" class="btn" value="Editar Conta"></button>
                </form>
            </div>
            <div class="password tabShow" id="password">
                <div class="title-form">
                    <h1>Editar Senha</h1>
                </div>
                <form action="/loja-conta-update-senha" method="post">
                    <div class="text">
                        <input type="password" name="senha_atual" id="" placeholder="Digite sua senha atual">
                        <input type="password" name="nova_senha" id="" placeholder="Digite sua nova senha">
                        <input type="password" name="conf_nova_senha" id="" placeholder="Confirme sua nova senha">
                    </div>
                    <button type="submit"><input type="button" class="btn" value="Editar Senha"></button>
                </form>
            </div>
        </div>
    </div>

    <script>
        function myFunction(id){
                const profile = document.getElementById('profile');
                const edit = document.getElementById('edit');
                const password = document.getElementById('password');
                if(id === 0){
                     profile.style.display = 'block';
                     edit.style.display = 'none';
                     password.style.display = 'none';
                }
                if(id === 1){
                    profile.style.display = 'none';
                    edit.style.display = 'block';
                    password.style.display = 'none';
                }
                if(id === 2){
                    profile.style.display = 'none';
                    edit.style.display = 'none';
                    password.style.display = 'block';
                }
            }
    </script>
    
    <%- include('foolder.ejs') %>

</body>
</html>